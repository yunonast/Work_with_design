<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Work_with_design" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pink_900</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        
        <item name="android:textViewStyle">@style/Theme.Work_with_design.Style_text_large</item>
    </style>

    <style name="Theme.Work_with_design.Style_text_large" parent="Widget.MaterialComponents.TextView">
    <item name="android:textSize">20sp</item>

    </style>


    <style name="Theme.Work_with_design.Style_text_medium" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">17sp</item>

    </style>


